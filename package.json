{
  "name": "@wesgro/react-writer",
  "license": "MIT",
  "author": "Jacob Ketcheson <jacob@ketcheson.ca>",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "pnpm run typecheck:lib && pnpm run typecheck:app && pnpm run typecheck:test",
    "typecheck:lib": "tsc --noEmit --project tsconfig.lib.json",
    "typecheck:app": "tsc --noEmit --project tsconfig.app.json",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "imports": {
    "#lib/*": [
      "./lib/*",
      "./lib/*.ts",
      "./lib/*.tsx",
      "./lib/*/index.ts"
    ]
  },
  "exports": {
    "lib/*": "./lib/*"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.1",
    "vite": "npm:rolldown-vite@7.1.13",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.13"
    }
  }
}
